<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about"
    android:background="@drawable/grad"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="About Us"
        android:padding="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:id="@+id/logocontainer"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ccetwhite"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo2"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logocontainer"
        android:layout_centerHorizontal="true"
        android:text="Designed and Developed by\nAyush Basral, Keshav Tangri\n\nunder guidance of \n\nDr. Sunil K. Singh(HOD)\nCSE Dept.,CCET(Degree)"
        android:background="@drawable/whiteborder"
        android:fontFamily="serif-monospace"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/black"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        android:text="Covid Outbreak Chandigarh v1.0.0"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="serif-monospace"
        />

</RelativeLayout>